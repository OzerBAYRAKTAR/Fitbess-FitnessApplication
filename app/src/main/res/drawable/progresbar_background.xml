<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Empty Bar -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="11dp" />
            <solid android:color="#D8D5D5" /> <!-- Empty bar background color -->
        </shape>
    </item>
    <!-- Filled Bar (Progress) -->
    <item android:id="@android:id/progress">
        <clip>
            <shape android:shape="rectangle">
                <corners android:radius="11dp" />
                <solid android:color="@color/login_color" /> <!-- Filled bar color (orange) -->
            </shape>
        </clip>
    </item>
</layer-list>