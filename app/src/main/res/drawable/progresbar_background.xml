<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Empty Bar -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="10dp" />
            <solid android:color="#CCCCCC" /> <!-- Empty bar background color -->
        </shape>
    </item>
    <!-- Filled Bar (Progress) -->
    <item android:id="@android:id/progress">
        <clip>
            <shape android:shape="rectangle">
                <corners android:radius="10dp" />
                <solid android:color="#0C9824" /> <!-- Filled bar color (orange) -->
            </shape>
        </clip>
    </item>
</layer-list>