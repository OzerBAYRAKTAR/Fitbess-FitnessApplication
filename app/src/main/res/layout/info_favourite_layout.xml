<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Your custom views for exercise information -->
    <TextView
        android:id="@+id/exerciseFavouriteTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Exercise Title"
        android:textSize="18sp"
        android:textStyle="bold"
        android:paddingBottom="8dp"/>

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/infoFavouriteGif"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:src="@drawable/denemegif"
        android:scaleType="centerCrop"
        android:layout_marginVertical="15dp" />
    <TextView
        android:id="@+id/exerciseFavouriteDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Exercise Description"
        android:textSize="16sp"/>

    <!-- Add other views as needed -->

</LinearLayout>