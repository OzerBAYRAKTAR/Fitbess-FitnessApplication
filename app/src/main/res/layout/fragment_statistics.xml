<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.Statistics.StatisticsFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:id="@+id/card1"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:layout_margin="10dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="5dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:fontFamily="@font/robotoslabbold"
                        android:textColor="@color/black"
                        android:layout_margin="10dp"
                        android:text="@string/txt_alltime"
                        app:layout_constraintBottom_toTopOf="@+id/imageExercise"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:id="@+id/imageExercise"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:layout_marginTop="35dp"
                        android:src="@drawable/dumbbell"
                        app:layout_constraintEnd_toStartOf="@+id/imageTime"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/txtExerciseCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/robotoslabmedium"
                        android:text="0"
                        android:textSize="27sp"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toEndOf="@+id/imageExercise"
                        app:layout_constraintStart_toStartOf="@+id/imageExercise"
                        app:layout_constraintTop_toBottomOf="@+id/imageExercise" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="serif"
                        android:text="@string/exercice"
                        android:textSize="22sp"
                        android:textColor="@color/orange"
                        app:layout_constraintEnd_toEndOf="@+id/txtExerciseCount"
                        app:layout_constraintStart_toStartOf="@+id/txtExerciseCount"
                        app:layout_constraintTop_toBottomOf="@+id/txtExerciseCount" />

                    <ImageView
                        android:id="@+id/imageTime"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:layout_marginTop="35dp"
                        android:src="@drawable/stopwatch"
                        app:layout_constraintEnd_toStartOf="@+id/imageCalorie"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintStart_toEndOf="@+id/imageExercise"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/txtTimeSpent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/robotoslabmedium"
                        android:text="0"
                        android:textSize="27sp"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toEndOf="@+id/imageTime"
                        app:layout_constraintStart_toStartOf="@+id/imageTime"
                        app:layout_constraintTop_toBottomOf="@+id/imageTime" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="serif"
                        android:text="@string/txt_time"
                        android:textSize="22sp"
                        android:textColor="@color/orange"
                        app:layout_constraintEnd_toEndOf="@+id/txtTimeSpent"
                        app:layout_constraintStart_toStartOf="@+id/txtTimeSpent"
                        app:layout_constraintTop_toBottomOf="@+id/txtTimeSpent" />

                    <ImageView
                        android:id="@+id/imageCalorie"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:layout_marginTop="35dp"
                        android:src="@drawable/salad"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintStart_toEndOf="@+id/imageTime"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/txtCalori"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/robotoslabmedium"
                        android:text="0"
                        android:textSize="27sp"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toEndOf="@+id/imageCalorie"
                        app:layout_constraintStart_toStartOf="@+id/imageCalorie"
                        app:layout_constraintTop_toBottomOf="@+id/imageCalorie" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="serif"
                        android:text="@string/txt_calori"
                        android:textSize="22sp"
                        android:textColor="@color/orange"
                        app:layout_constraintEnd_toEndOf="@+id/txtCalori"
                        app:layout_constraintStart_toStartOf="@+id/txtCalori"
                        app:layout_constraintTop_toBottomOf="@+id/txtCalori" />


                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/card2"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="20dp"
                android:layout_marginHorizontal="10dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="5dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/card1" >

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/textView15"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:fontFamily="@font/robotoslabextrabold"
                        android:text="@string/txt_bodyparameters"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:id="@+id/imageView3"
                        android:layout_width="70dp"
                        android:layout_height="240dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/bodyparameters"
                        android:layout_marginStart="40dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <View
                        android:id="@+id/view"
                        android:layout_width="40dp"
                        android:layout_height="2dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginStart="-20dp"
                        android:background="@color/indicator"
                        android:rotation="36"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/imageView3"
                        app:layout_constraintTop_toTopOf="@+id/imageView3" />

                    <TextView
                        android:id="@+id/txtbooty"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/robotoslabmedium"
                        android:text="\u003F"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        app:layout_constraintBottom_toTopOf="@+id/textView16"
                        app:layout_constraintEnd_toEndOf="@+id/textView16"
                        app:layout_constraintStart_toStartOf="@+id/textView16" />

                    <TextView
                        android:id="@+id/textView16"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:layout_marginTop="16dp"
                        android:text="@string/booty"
                        android:fontFamily="serif"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        app:layout_constraintStart_toEndOf="@+id/view"
                        app:layout_constraintTop_toTopOf="@+id/view" />

                    <View
                        android:id="@+id/view12"
                        android:layout_width="50dp"
                        android:layout_height="2dp"
                        android:background="@color/indicator"
                        android:layout_marginBottom="15dp"
                        android:rotation="-30"
                        android:layout_marginEnd="-18dp"
                        app:layout_constraintBottom_toBottomOf="@+id/imageView3"
                        app:layout_constraintEnd_toStartOf="@+id/imageView3"
                        app:layout_constraintTop_toTopOf="@+id/imageView3" />

                    <TextView
                        android:id="@+id/txtbelly"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/robotoslabmedium"
                        android:text="\u003F"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        app:layout_constraintBottom_toTopOf="@+id/textview17"
                        app:layout_constraintEnd_toEndOf="@+id/textview17"
                        app:layout_constraintStart_toStartOf="@+id/textview17" />

                    <TextView
                        android:id="@+id/textview17"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="17dp"
                        android:text="@string/belly"
                        android:textColor="@color/black"
                        android:layout_marginEnd="5dp"
                        android:fontFamily="serif"
                        android:textSize="15sp"
                        app:layout_constraintEnd_toStartOf="@+id/view12"
                        app:layout_constraintTop_toTopOf="@+id/view12" />


                    <View
                        android:id="@+id/view14"
                        android:layout_width="40dp"
                        android:layout_height="2dp"
                        android:rotation="-25"
                        android:layout_marginStart="-5dp"
                        android:layout_marginTop="65dp"
                        android:background="@color/indicator"
                        app:layout_constraintStart_toEndOf="@+id/imageView3"
                        app:layout_constraintTop_toTopOf="@+id/imageView3" />

                    <TextView
                        android:id="@+id/txtchest"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/robotoslabmedium"
                        android:text="\u003F"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        app:layout_constraintBottom_toTopOf="@+id/textview18"
                        app:layout_constraintEnd_toEndOf="@+id/textview18"
                        app:layout_constraintStart_toStartOf="@+id/textview18" />

                    <TextView
                        android:id="@+id/textview18"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:text="@string/chest"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:fontFamily="serif"
                        app:layout_constraintStart_toEndOf="@+id/view14"
                        app:layout_constraintTop_toTopOf="@+id/view14" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/newTest"
                        android:layout_width="match_parent"
                        android:layout_height="37dp"
                        android:layout_marginHorizontal="40dp"
                        android:background="@drawable/emptybutton_back"
                        android:text="@string/newTest"
                        android:layout_marginBottom="15dp"
                        android:textColor="@color/orange"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/imageView3" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="20dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="5dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/card2">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/textView9"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:fontFamily="@font/robotoslabextrabold"
                        android:text="@string/body_indeks"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/textView17"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginEnd="15dp"
                        android:fontFamily="serif"
                        android:text="@string/height"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toStartOf="@+id/txtHeight"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/textView9" />

                    <ImageView
                        android:id="@+id/img1"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginStart="10dp"
                        android:src="@drawable/rightright"
                        app:layout_constraintBottom_toBottomOf="@+id/textView17"
                        app:layout_constraintStart_toEndOf="@+id/textView17"
                        app:layout_constraintTop_toTopOf="@+id/textView17" />

                    <TextView
                        android:id="@+id/txtHeight"
                        android:layout_width="wrap_content"
                        android:layout_height="35dp"
                        android:layout_marginStart="64dp"
                        android:background="@drawable/emptybutton_back"
                        android:gravity="center"
                        android:paddingHorizontal="50dp"
                        android:text="\u003F"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="17sp"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="@+id/textView17"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintStart_toEndOf="@+id/textView17"
                        app:layout_constraintTop_toTopOf="@+id/textView17" />

                    <TextView
                        android:id="@+id/textView18"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:fontFamily="serif"
                        android:text="@string/weight"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginEnd="30dp"
                        app:layout_constraintStart_toStartOf="@id/textView17"
                        app:layout_constraintEnd_toStartOf="@+id/txtWeight"
                        app:layout_constraintTop_toBottomOf="@+id/textView17" />

                    <ImageView
                        android:id="@+id/img2"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginStart="10dp"
                        android:src="@drawable/rightright"
                        app:layout_constraintBottom_toBottomOf="@+id/textView18"
                        app:layout_constraintStart_toEndOf="@+id/textView18"
                        app:layout_constraintTop_toTopOf="@+id/textView18" />

                    <TextView
                        android:id="@+id/txtWeight"
                        android:layout_width="wrap_content"
                        android:layout_height="35dp"
                        android:layout_marginStart="64dp"
                        android:background="@drawable/emptybutton_back"
                        android:gravity="center"
                        android:paddingHorizontal="50dp"
                        android:text="\u003F"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="17sp"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="@+id/textView18"
                        app:layout_constraintEnd_toStartOf="@+id/textView18"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintStart_toEndOf="@+id/textView18"
                        app:layout_constraintTop_toTopOf="@+id/textView18" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/editEndeks"
                        android:layout_width="match_parent"
                        android:layout_height="37dp"
                        android:layout_marginHorizontal="40dp"
                        android:background="@drawable/emptybutton_back"
                        android:text="@string/newTest"
                        android:layout_marginTop="25dp"
                        android:textColor="@color/orange"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/txtWeight" />

                    <TextView
                        android:id="@+id/txt17"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/robotoslabmedium"
                        android:text="BMI(kg/m²)"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="20dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/editEndeks" />

                    <LinearLayout
                        android:id="@+id/linearKvi"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_marginHorizontal="10dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:orientation="horizontal"
                        app:layout_constraintTop_toBottomOf="@id/txt17">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <ImageView
                                android:id="@+id/viewDown1"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_gravity="center"
                                android:src="@drawable/view_down" />
                            <View
                                android:layout_width="70dp"
                                android:layout_height="15dp"
                                android:background="@drawable/view1_back"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="&lt;18,5"
                                android:textSize="12sp"
                                style="@style/TextAppearance.AppCompat.Body2"
                                android:layout_gravity="center"
                                android:textColor="@color/black"/>

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="9dp"
                            android:orientation="vertical">
                            <ImageView
                                android:id="@+id/viewDown2"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_gravity="center"
                                android:src="@drawable/view_down"/>
                            <View
                                android:layout_width="75dp"
                                android:layout_height="15dp"
                                android:background="@drawable/view2_back"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="&lt;24.9"
                                android:textSize="12sp"
                                style="@style/TextAppearance.AppCompat.Body2"
                                android:layout_gravity="center"
                                android:textColor="@color/black"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="9dp"
                            android:orientation="vertical">
                            <ImageView
                                android:id="@+id/viewDown3"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_gravity="center"
                                android:src="@drawable/view_down"/>
                            <View
                                android:layout_width="90dp"
                                android:layout_height="15dp"
                                android:background="@drawable/view3_back"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="&lt;29.9"
                                android:textSize="12sp"
                                style="@style/TextAppearance.AppCompat.Body2"
                                android:layout_gravity="center"
                                android:textColor="@color/black"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="9dp"
                            android:orientation="vertical">
                            <ImageView
                                android:id="@+id/viewDown4"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_gravity="center"
                                android:src="@drawable/view_down"/>
                            <View
                                android:layout_width="95dp"
                                android:layout_height="15dp"
                                android:background="@drawable/view4_back"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="12sp"
                                android:text="&lt;30"
                                style="@style/TextAppearance.AppCompat.Body2"
                                android:layout_gravity="center"
                                android:textColor="@color/black"/>
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/linearKategori"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="30dp"
                        android:layout_marginTop="15dp"
                        app:layout_constraintTop_toBottomOf="@+id/linearKvi"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="17sp"
                            android:textColor="@color/black"
                            android:fontFamily="serif"
                            android:text="@string/indeks"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="17sp"
                            android:layout_marginStart="5dp"
                            android:textColor="@color/black"
                            android:fontFamily="serif"
                            android:text=":"/>
                        <TextView
                            android:id="@+id/bmiIndeks"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="17sp"
                            android:layout_marginStart="5dp"
                            android:textColor="@color/black"
                            android:fontFamily="@font/robotoslabmedium"
                            android:text="\u003F"/>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="30dp"
                        android:layout_marginTop="15dp"
                        app:layout_constraintTop_toBottomOf="@+id/linearKategori"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="17sp"
                            android:textColor="@color/black"
                            android:fontFamily="serif"
                            android:text="@string/categorie"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="17sp"
                            android:layout_marginStart="5dp"
                            android:textColor="@color/black"
                            android:fontFamily="serif"
                            android:text=":"/>
                        <TextView
                            android:id="@+id/bmiKategori"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="17sp"
                            android:layout_marginStart="5dp"
                            android:textColor="@color/black"
                            android:fontFamily="@font/robotoslabmedium"
                            android:text="\u003F"/>

                    </LinearLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>


        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>