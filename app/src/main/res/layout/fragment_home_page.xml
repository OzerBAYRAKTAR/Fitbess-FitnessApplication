<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.HomePage.HomePageFragment">

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/pageerHome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/indicatorsContainer"
        android:layout_marginTop="25dp"
        app:layout_constraintStart_toStartOf="@id/pageerHome"
        app:layout_constraintEnd_toEndOf="@id/pageerHome"
        app:layout_constraintTop_toBottomOf="@id/pageerHome"
        android:orientation="horizontal" />



</androidx.constraintlayout.widget.ConstraintLayout>